{
  "dist": {
    "browserSyncDir": "dist/",
    "js": "dist/assets/js/",
    "templates": "dist/",
    "webpackassets": "assets/",
    "webpackpublic": "dist/"
  },
  "src": {
    "base": "src/",
    "structure": "src/structure/",
    "jsEntryPoints": {
      "main": "./src/js/main.js"
    }
  },
  "browsersync": {
    "openbrowser": false,
    "port": 3000,
    "https": false,
    "proxy": "http://bootstrap.kick"
  },
  "copyfiles": [
    {
      "src": "src/structure/",
      "dest": "dist/"
    }
  ],
  "watchfiles": [
    "src/structure/**/*"
  ]
}